{
    "presets": 
      [
      "@babel/preset-react", 
      "@babel/preset-flow",
      [
        "@babel/preset-env", { 
          "modules": "commonjs",
          "targets": {
            "browsers": ["last 2 versions", "ie >= 11"]
          }
        }
      ]
    ],
    "plugins": [
        [
          "@babel/plugin-proposal-decorators",
          {
            "legacy": true
          }
        ],
        [
          "@babel/plugin-proposal-class-properties",
          {
            "loose": true
          }
        ]
    ]
}